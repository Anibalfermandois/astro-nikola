---
import '../styles/global.css';
import Gradients from '../components/Gradients.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Solar Panel Solutions for Your Home" } = Astro.props;

const navItems = [
	{ href: '/', label: 'Home' },
	{ href: '/about', label: 'About Us' },
	{ href: '/products', label: 'Products' },
	{ href: '/projects', label: 'Projects' },
	{ href: '/contact', label: 'Contact' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col">
		<Gradients />
		
		<header class="fixed w-full top-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-200">
			<div class="container mx-auto px-4 py-4">
				<nav class="flex flex-col md:flex-row justify-between items-center">
					<a href="/" class="text-2xl font-bold text-primary hover:text-primary-light transition-colors mb-4 md:mb-0">
						<span class="gradient-text">SolarPro</span>
					</a>
					<ul class="flex flex-wrap gap-8 items-center">
						{navItems.map(item => (
							<li>
								<a 
									href={item.href}
									class:list={[
										"text-gray-600 hover:text-primary transition-colors duration-300",
										{ "text-primary font-semibold": Astro.url.pathname === item.href }
									]}
									aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
								>
									{item.label}
								</a>
							</li>
						))}
						<li>
							<a 
								href="/contact" 
								class="btn btn-accent"
							>
								Get Quote
							</a>
						</li>
					</ul>
				</nav>
			</div>
		</header>
		
		<main class="flex-grow pt-24 relative">
			<slot />
		</main>

		<footer class="relative mt-20">
			<div class="absolute inset-0 bg-gradient-to-b from-primary/95 to-primary"></div>
			<div class="container mx-auto px-4 py-16 relative text-white">
				<div class="grid md:grid-cols-4 gap-8 mb-8">
					<div>
						<h3 class="text-xl font-bold text-white mb-4">SolarPro</h3>
						<p class="text-gray-300">Powering a sustainable future with innovative solar solutions.</p>
					</div>
					<div>
						<h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
						<ul class="space-y-2">
							{navItems.map(item => (
								<li>
									<a 
										href={item.href}
										class="text-gray-300 hover:text-accent transition-colors duration-300"
									>
										{item.label}
									</a>
								</li>
							))}
						</ul>
					</div>
					<div>
						<h4 class="text-lg font-semibold text-white mb-4">Contact</h4>
						<ul class="space-y-2 text-gray-300">
							<li>Phone: (555) 123-4567</li>
							<li>Email: info@solarpro.com</li>
							<li>Address: 123 Solar Street<br/>San Francisco, CA 94105</li>
						</ul>
					</div>
					<div>
						<h4 class="text-lg font-semibold text-white mb-4">Follow Us</h4>
						<div class="flex space-x-4">
							<a href="#" class="text-gray-300 hover:text-accent transition-colors duration-300">
								<span class="sr-only">Facebook</span>
								<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
								</svg>
							</a>
							<a href="#" class="text-gray-300 hover:text-accent transition-colors duration-300">
								<span class="sr-only">Twitter</span>
								<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
								</svg>
							</a>
							<a href="#" class="text-gray-300 hover:text-accent transition-colors duration-300">
								<span class="sr-only">LinkedIn</span>
								<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
				<div class="border-t border-white/20 pt-8 text-center">
					<p class="text-gray-300">&copy; {new Date().getFullYear()} SolarPro. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	html {
		font-family: 'Inter', system-ui, sans-serif;
	}

	[aria-current='page'] {
		@apply text-accent font-medium;
	}
</style>
