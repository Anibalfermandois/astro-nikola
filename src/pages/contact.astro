---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import Gradients from '../components/Gradients.astro';
---

<Layout title="Contact Us - SolarPro" description="Get in touch for a free solar consultation">
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-2xl mx-auto">
			<h1 class="text-4xl font-bold mb-8 text-center">Contact Us</h1>
			<p class="text-lg text-gray-600 mb-12 text-center">
				Ready to start your solar journey? Fill out the form below and one of our experts will get back to you shortly.
			</p>
			
			<ContactForm client:load />
			<div class="mt-16 grid md:grid-cols-3 gap-8">
				<div class="text-center">
					<h3 class="font-semibold mb-2">Phone</h3>
					<p class="text-gray-600">(555) 123-4567</p>
				</div>
				<div class="text-center">
					<h3 class="font-semibold mb-2">Email</h3>
					<p class="text-gray-600">info@solarpro.com</p>
				</div>
				<div class="text-center">
					<h3 class="font-semibold mb-2">Office Hours</h3>
					<p class="text-gray-600">Mon-Fri: 9am - 6pm</p>
				</div>
			</div>
		</div>
	</div>
</Layout> 